#! /usr/bin/env python

import os
import sys
import shutil
import commands
import time

from papers.utils import Cleanup as cleaner


#get the input from the clipboard
old_text = None
while 1:
    text = commands.getoutput("pbpaste")
    if old_text == text:
        time.sleep(1)
        continue

    #clean the title
    clean_text = cleaer.clean_title(text)
    #put the text on the clipboard
    fileobj = open(".stdin", "w")
    fileobj.write("does this work")
    fileobj.close()
    cmd = "pbcopy < .stdin"
    os.system(cmd)
    os.remove(".stdin")

    old_text = text

